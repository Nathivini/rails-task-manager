<h1><%= @task.title %></h1>
<%= @task.details %>

 <h2><%= link_to "Back to list", tasks_path %> </h2>

<% if @task.completed %>
<p>This task is completed</p>
<% else %>
<p>Task is not completed</p>
<% end %>

<h3><%= link_to "Edit Task", edit_task_path(@task) %></h3>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
